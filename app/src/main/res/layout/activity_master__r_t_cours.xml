    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Master_RT_cours">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#d9e8ee"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="100dp">

        <TextView
            android:id="@+id/master1_RT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CategoryStyle"
            android:backgroundTint="#52688F"
            android:background="@drawable/raduis "
            android:text="Master 1 RT" />

        <TextView
            android:id="@+id/master2_RT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CategoryStyle"
            android:backgroundTint="#52688F"
            android:background="@drawable/raduis "
            android:text="Master 2 RT" />
